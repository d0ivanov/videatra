<div id="user-subnav" class="stripe">
  <div class="container">
    <ul>
      <li><a href="/user/profile" class="current"><i class="icon-white icon-edit"></i> Profile settings</a></li>
      <li><a href="/subscriptions/show"><i class="icon-white icon-repeat"></i> Subscriptions</a></li>
      <li><a href="/user/account"><i class="icon-white icon-cog"></i> Account settings</a></li>
    </ul>
  </div>
</div>
<div class="row-fluid service">
  <div class="container">
    <h2>Profile settings</h2>
    <div class="row-fluid">
      <div class="span7">
        <div class="sheet">
          <div id="edit-profile-form" class="service-form form-light">
            <form accept-charset="UTF-8" enctype="multipart/form-data" action="/user/profile/update" class="edit_user" id="edit_user" method="post">
              <div style="margin:0;padding:0;display:inline">
                <div class="inside-sheet">
                  <div class="row-fluid">
                    <div class="form-row span6">
                      <label for="user_first_name">First name</label>
                      <input class="input-block-level" id="user_first_name" name="first_name" size="30" type="text" value="<%= current_user.profile.first_name %>" />
                    </div>
                    <div class="form-row span6">
                      <label for="user_last_name">Last name</label>
                      <input class="input-block-level" id="user_last_name" name="last_name" size="30" type="text" value="<%= current_user.profile.last_name %>" />
                    </div>
                  </div>
                  <div class="form-row">
                    <label for="user_avatar">Avatar</label>
                    <input class="input-block-level" id="user_avatar" name="avatar" type="file" />
                  </div>
                  <div class="form-row">
                    <label for="user_country">Country</label>
                    <select id="user_country" name="country">
                      <option value="<%= current_user.profile.country %>" selected="selected"><%= selected_country current_user.profile.country %></option>
                      <% country_select.each do |country, code| %>
                        <option value="<%= code %>"><%= country %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-actions">
                <input class="btn btn-action" type="submit" value="Save changes" />
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="span5">
        <div class="sheet facebook-account-info">
          <div class="inside-sheet">
            <div class="row-fluid">
              <div class="span4">
                <div class="user-avatar"><img alt="profile picture" src="<%= current_user.profile.avatar.url %>" /></div>
              </div>
              <div class="span8">
                <h3><%= current_user.profile.first_name %></h3>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <div class="row-fluid"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
