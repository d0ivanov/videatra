<article class="episode-partial span4">
    <div class="episode sheet">
      <h3><a href="<%= "/administraotr/subscriptions/edit/#{plan.id}" %>"><%= plan.name %></a></h3>
      <div class="description-container collapsed">
        <div class="inside-sheet">
          <div class="description">
            <p><%= plan.description %></p>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <form method="post" action="<%= "/administrator/subscriptions/delete/#{plan.id}" %>" id="delete-plan">
          <div class="watch">
            <a href="<%= "/administrator/subscriptions/edit/#{plan.id}" %>" class="btn btn-action">Edit</a>
            <a href="<%= "javascript:;" %>" class="btn btn-danger" onclick="$('#delete-plan').submit()">Delete</a>
          </div>
      </form>
      </div>
    </div>
</article>
