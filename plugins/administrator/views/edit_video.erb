<div id="user-subnav" class="stripe">
  <div class="container">
      <ul>
        <!-- Should have a PlugMan hook here -->
        <li><a href="/administrator#videos"><i class="icon-white icon-edit"></i>Videos</a></li>
        <li><a href="/administrator#subscriptions"><i class="icon-white icon-repeat"></i>Subscriptions</a></li>
      </ul>
  </div>
</div>
  <div class="row-fluid service">
      <div class="container">
        <h2>Edit video</h2>
        <div class="row-fluid">
          <div class="span7">
            <div class="sheet">
              <div id="edit-profile-form" class="service-form form-light">
                <form accept-charset="UTF-8" action="/videos/edit/<%= params['id']%>" class="edit_user" id="edit_user" method="post" enctype="multipart/form-data">
                  <div class="inside-sheet">
                    <div class="form-row">
                      <label for="thumbnail">Thumbnail</label>
                      <img src="<%= @video.thumbnail.url %>" alt="<%= @video.title %>" />
                      <input id="thumbnail" type="file" name="video[thumbnail]" />
                    </div>
                    <div class="form-row">
                      <label for="video_title">Title</label>
                      <input class="input-block-level" id="video_title" name="video[title]" size="30" type="text" value="<%= @video.title %>" />
                    </div>
                    <div class="form-row">
                      <label for="video_description">Description</label>
                      <textarea class="input-block-level" id="video_description" name="video[description]"><%= @video.description %></textarea>
                    </div>
                    <div class="form-row">
                      <label for="video_subscription_plan">Subscription Plan</label>
                      <select multiple required name="video[subscription_plans][]" selected="<%= @video.subscription_plans.first.name %>">
                         <% @subscription_plans.each do |plan| %>
                           <option value="<%= plan.id %>"><%= plan.name %></option>
                         <% end %>
                       </select>
                    </div>
                  </div>
                  <div class="form-actions">
                    <input class="btn btn-action" type="submit" value="Save changes" />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
