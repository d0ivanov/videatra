<div id="user-subnav" class="stripe">
  <div class="container">
      <ul>
        <!-- Should have a PlugMan hook here -->
        <li><a href="/administrator?view=videos"><i class="icon-white icon-edit"></i>Videos</a></li>
        <li><a href="/administrator?view=subscriptions"><i class="icon-white icon-repeat"></i>Subscriptions</a></li>
      </ul>
  </div>
</div>
  <div class="row-fluid service">
      <div class="container">
        <h2>Edit video</h2>
        <div class="row-fluid">
          <div class="span7">
            <div class="sheet">
              <div id="edit-profile-form" class="service-form form-light">
                <form accept-charset="UTF-8" action="/administrator/subscriptions/edit/<%= params['id']%>" class="edit_user" method="post">
                  <div class="inside-sheet">
                    <div class="form-row">
                      <label for="name">Name</label>
                      <input id="name" type="text" name="plan[name]" value="<%= @plan.name %>" required />
                    </div>
                    <div class="form-row">
                      <label for="description">Description</label>
                      <textarea class="input-block-level" id="description" name="plan[description]"><%= @plan.description %></textarea>
                    </div>
                    <div class="form-row">
                      <label for="price">Price</label>
                      <textarea class="input-block-level" id="price" name="plan[price]"><%= @plan.price %></textarea>
                    </div>
                    <div class="form-row">
                      <label for="duration">Duration</label>
                      <input type="text" id="duration" class="input-block-level" name="plan[duration]" value="<%= @plan.duration %>" />
                    </div>
                  </div>
                  <div class="form-actions">
                    <input class="btn btn-action" type="submit" value="Save changes" />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
